{
  // Debug configurations for this Next.js app
  "version": "0.2.0",
  "configurations": [
    {
      // Run and debug the Next.js dev server with Node inspector
      "name": "Next.js: Debug server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "protocol": "inspector",
      "autoAttachChildProcesses": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      // Attach VS Code to the browser to debug client components like InjectionComponent.tsx
      "name": "Next.js: Debug client (Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    }
  ]
}


